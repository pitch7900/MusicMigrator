{% extends "main.twig" %}

{% block content %}

    <div id="main_page" class="container-fluid row" class="row">
        <div class="container">

            <h1>Upload library.xml</h1>
            <form  action="/deezer/login" enctype="multipart/form-data" method="post">
                <div class="form-group row">
                    <label for="login_new" class="col-sm-4 col-form-label">Login</label>
                    <div class="col-sm-8">
                        <input id="login_new" type="text" name="login" class="form-control" placeholder="" value="" autocomplete="username">
                    </div>
                </div>    
                <div class="form-group row">
                    <label for="password_new" class="col-sm-4 col-form-label">Password</label>
                    <div class="col-sm-8">
                        <input id="password_new" type="password" name="password" class="form-control" placeholder=""  autocomplete="current-password">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <input type="submit" class="btn btn-primary" value="Login">
                    </div>
                </div>
            </form>
            
            {#<form action="/file/upload" method="post" enctype="multipart/form-data">
                Select image to upload:
                <input type="file" name="fileToUpload" id="fileToUpload">
                <input type="submit" value="Upload Library" name="submit">
            </form>#}
            
            <form  action="/file/upload" enctype="multipart/form-data" method="post">

                <div class="input-group mb-3">

                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="file">
{#                        <label class="custom-file-label" for="file">iTunes Library.xml file only</label>#}
                        
                    </div>
                    <input type="submit" class="btn btn-primary" value="Upload">
                </div>


                

            </form>

        </div>
        <script src="/js/main.js" type="text/javascript"></script>
    </div>

{% endblock %}


{% block footer %}
    <footer class="footer  py-3 bg-light fixed-bottom">
        <div class="container">

        </div>
    </footer>
{%endblock%}