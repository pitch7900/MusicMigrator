<!-- Modal dialog for History-->
<div class="modal fade" id="DeezerImport_modal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <img src="/img/favicon.png" alt="" width="40px"/>
                <h5 class="modal-title">Import to Deezer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>

                </button>
            </div>
            <div class="modal-body mx-auto">
                
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuPlaylist" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        New Playlist
                    </button>
                    
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuPlaylist">
                         {% for playlist in deezerplaylists%} 
                        <a class="dropdown-item" >{{ playlist.title }}</a>
                        {% endfor %}
                        
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                   
                <button class="btn btn-lg btn-primary btn-block" >Import</button>
{#                {{ dump(deezerplaylists) }}#}
            </div>
        </div>
    </div>
</div>

