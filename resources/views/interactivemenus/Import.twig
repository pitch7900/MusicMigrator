<!-- Modal dialog for History-->
<div class="modal fade" id="Import_modal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <img src="/img/{{ destination }}.png" alt="" width="40px"/>
                <h5 class="modal-title">Import to {{ destination }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body mx-auto">
                <p>Importing <span id="DestinationImportTracksNumber">0</span> tracks to {{ destination }}<p>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" playlistid="0" type="button" id="dropdownMenuPlaylist" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Choose playlist
                    </button>

                    <div id="dropdownMenuPlaylistItems" class="dropdown-menu" aria-labelledby="dropdownMenuPlaylist">
                        <a class="dropdown-item" playlistid="0">New Playlist</a>
                        <div class="dropdown-divider"></div>
                        {% for playlist in destinationplaylists%} 
                            <a id="destination_playlist_{{ playlist.id }}" playlistname="{{ playlist.title }}" destination="{{ destination }}" class="dropdown-item" playlistid="{{ playlist.id }}">{{ playlist.title }}</a>
                        {% endfor %}

                    </div>
                </div>
                <div id="InputGroupPlaylistName" class="input-group mb-3 invisible">
                    <input id="InputPlaylistName" type="text" class="form-control" value="{{ playlistname }}" aria-describedby="basic-addon1">
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="ButtonImportTo" class="invisible btn btn-primary" type="button" onclick="ImportTo('{{destination}}');" data-dismiss="modal">Import</button>
            </div>
        </div>
    </div>
</div>

