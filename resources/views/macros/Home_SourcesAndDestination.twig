{% macro Deezer(deezerauthurl) %}
    <div class="card text-center col-sm-12 col-md-3" style="width: 18rem;">
        <center><img class="card-img-top" src="/img/deezer.png" alt="Deezer"  style="width : 10rem"/></center>
        <div class="card-body">
            <a class="nav-link"  href="{{ deezerauthurl }}">
                <button type="button" class="btn btn-primary">

                    Connect to Deezer

                </button>
            </a>

        </div>
    </div>
{% endmacro %}


